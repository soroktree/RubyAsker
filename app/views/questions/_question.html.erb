<article class="card my-3">
  <section class="card-header">

    <%= user_name_or_email question.user %>

    <div class="card-body">
      <h4><%= question.title %></h4>

      <section class="card-text">

        <time datetime="<%= question.formatted_created_at%>">
            <small></small><%= question.formatted_created_at %></small>
        </time>

        <div class="my-2">
          <%= render question.tags %>
        </div>

        <p class="my-2">
            <%= truncate question.body, length: 100, omission: '... (continued)' %>
        </p>   
      </section>


      <%= link_to 'Show', question_path(question), class: 'btn btn-primary'%> 

      <% if policy(question).edit? %>
        <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-secondary'%> 
      <% end %>

      <% if policy(question).destroy? %>
        <%= link_to 'Delete', question_path(question), class: 'btn btn-danger',
                data: { method: :delete, confirm: 'Are you sure?'} %>
      <% end %>
    </div>
  </section>
</article>  
