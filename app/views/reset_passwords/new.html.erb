<% provide :page_title, 'Password Drop' %>
<% currently_at 'Sign In' %>

<h1 class="mb-4"><%= 'Password Drop' %></h1>

<%= form_with url: reset_password_path do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :email, 'email' %>
    </div>

    <div class="col-sm-10">
      <%= f.email_field :email, value: params[:email],
        class: 'form-control form-control-lg', required: true %>
    </div>
  </div>

  <%= f.submit 'Send Instruction', class: 'btn btn-primary btn-lg' %>
  <%= link_to 'Back to Log In', new_session_path, class: 'btn btn-secondary' %>
<% end %>