<%= render 'shared/errors', object: @answer%>

<%= form_with model: [@question, @answer] do |fa| %>
    <div class = "mb-3 row" >

        <div class = "col-sm-2 col-form-label">
            <%= fa.label :body %>
        </div>

        <div class ="col-sm-10">
            <%= fa.text_area :body, class: 'form-control', required: true %>
        </div>

    </div>
    <%= fa.submit "Submit answer!", class: 'btn btn-primary' %>
<%end%>
